<%- include('../partials/header') %>

<container class="form-container">
    <form id="application-form" action="/applications" method="POST">
        <label>Company:</label>
        <input type="text" name="companyName">
        <label>Salary:</label>
        <input type="number" name="salary">
        <label>Position:</label>
        <input type="text" name="position">
        <label>Stage of Application:</label>
        <input type="text" name="applicationStage">
        <label>Job Offer?</label>
        <select name="success">
            <option value="Waiting">Waiting</option>
            <option value="Success">Success</option>
            <option value="Rejected">Rejected</option>
        </select>
        <label>Notes</label>
        <textarea type="text" name="notes"></textarea>
        <label>Date of Application:</label>
        <input type="date" name="timeOfApplication">
        <input class="submit-button" type="submit" value="Add Application">
    </form>
</container>
<%- include('../partials/footer') %>
