<%- include('../partials/header') %>

<container class="form-container">
    <form id="application-form" action="/applications/<%= application._id %>?_method=PUT" method="POST">
        <label>Company:</label>
        <input type="text" name="companyName" value="<%=application.companyName %>">
        <label>Salary:</label>
        <input type="number" name="salary" value="<%=application.salary %>">
        <label>Position:</label>
        <input type="text" name="position" value="<%=application.position %>">
        <label>Stage of Application:</label>
        <input type="text" name="applicationStage" value="<%=application.applicationStage %>">
        <label>Job Offer?</label>
        <select class="success-selection" name="success" value="<%= application.success %>">
            <option value="Waiting">Waiting</option>
            <option value="Success">Success</option>
            <option value="Rejected">Rejected</option>
        </select>
        <label>Notes</label>
        <textarea type="text" name="notes" value="<%= application.notes %>"></textarea>
        <label>Date of Application:</label>
        <input type="date" name="timeOfApplication" value="<%= application.timeOfApplication %>">
        <input class="submit-button" type="submit" value="Confirm">
    </form>
</container>

<%- include('../partials/footer') %>